@model BO.Samourai
@{
    ViewBag.Title = "Suppression samouraï";
}
<h2>Suppression</h2>
<h3>Etes vous sur de vouloir supprimer ce samouraï ?</h3>
<div>
    @Html.Partial("_Samourai", Model)

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" />
        </div>
    }
</div>
<br />
<div>
    @Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn btn-default" })
</div>
